<div class="alert
    <%=
    case type.to_sym
    when :alert, :danger, :error, :validation_errors
        'alert-danger'
    when :warning, :todo
        'alert-warning'
    when :notice, :success
        'alert-success'
    else
        'alert-info'
    end
    %>
     alert-dismissible" role="alert">
    <button type="button" class="close fa fa-times" data-dismiss="alert" aria-label="Close"></button>
    <%= content %>
</div>
